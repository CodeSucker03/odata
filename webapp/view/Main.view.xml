<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="base.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <f:DynamicPage
        id="dynamicPage"
        showFooter="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <svm:SmartVariantManagement
                        id="svm"
                        showExecuteOnSelection="true"
                    />
                </f:heading>
                <f:expandedContent>
                    <Label
                        id="expandedLabel"
                        text="No filters active"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Label
                        id="snappedLabel"
                        text="No filters active"
                    />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterBar"
                        persistencyKey="EmployeeTable"
                        useToolbar="false"
                        search="onSearch"
                        filterChange="onFilterChange"
                        afterVariantLoad="onAfterVariantLoad"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="StartDate"
                                label="Ngày bắt đầu"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        name="StartDate"
                                        displayFormat="dd.MM.yyyy"
                                        valueFormat="yyyyMMdd"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                name="LeaveType"
                                label="Loại phép"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <ComboBox
                                        name="LeaveType"
                                        selectionChange="onSelectionChange"
                                    >
                                        <items>
                                            <core:Item
                                                key="01"
                                                text="Nghỉ ốm"
                                            />
                                            <core:Item
                                                key="02"
                                                text="Nghỉ việc riêng"
                                            />
                                            <core:Item
                                                key="03"
                                                text="Nghỉ thai sản"
                                            />
                                        </items>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                name="Status"
                                label="Trạng thái"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <ComboBox
                                        name="Status"
                                        selectionChange="onSelectionChange"
                                    >
                                        <items>
                                            <core:Item
                                                key="01"
                                                text="Mới"
                                            />
                                            <core:Item
                                                key="02"
                                                text="Đã duyệt"
                                            />
                                            <core:Item
                                                key="03"
                                                text="Đã từ chối"
                                            />
                                        </items>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Button
                text="Get filter"
                press="getFilters"
            />
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <Button text="Click me" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
